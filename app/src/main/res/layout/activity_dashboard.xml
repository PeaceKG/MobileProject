<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".viewmmodels.DashboardActivity">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, [Username]!"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/buttonViewProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Profile"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonBrowseBadges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse All Badges"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonViewCertProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Certification Progress"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"/>


</LinearLayout>