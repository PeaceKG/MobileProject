<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".viewmmodels.BadgeDetailsActivity">

    <ImageView
        android:id="@+id/imageViewBadgeIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_badge_placeholder"/> <TextView
    android:id="@+id/textViewBadgeName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Badge Name"
    android:textSize="24sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewBadgeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Badge Description"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewBadgeCriteriaLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to Earn:"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewBadgeCriteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criteria to earn this badge..."
        android:layout_marginBottom="16dp"/>

</LinearLayout>